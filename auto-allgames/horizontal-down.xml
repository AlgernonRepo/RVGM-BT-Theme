<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		<!-- HIDDE ELEMENTS -->
		<text name="sys_label, sys_info" extra="true">
			<visible>false</visible>
		</text>
		<image name="info-bg" extra="true">
			<visible>false</visible>
		</image>	
		<video name="videoPreview" extra="true">
			<visible>false</visible>
		</video>

		<!-- Mario Sprite -->
		<image name="info" extra="true">
			<origin>0 0</origin>
			<pos>0.022 0.266</pos>
			<path>./info-horizontal-down.png</path>
		</image>
	
		<!-- Sytem AVATAR -->
		<image name="avatar" extra="true">
			<pos>0.366 0.15</pos>
			<rotation>90</rotation>
		</image>
		
		<!-- Mario Hands Sprite -->
		<image name="console" extra="true">
			<origin>0 0</origin> <!-- center -->
			<pos>0.035 0.611</pos>
			<path>./console-horizontal-down.png</path>
			<zIndex>999</zIndex>
		</image>

	</view>
</theme>
