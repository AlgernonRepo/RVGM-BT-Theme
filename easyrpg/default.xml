<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar" extra="static">
			<pos>0.46 0.047</pos>
			<maxSize>0.35 0.9067</maxSize>
			<storyboard repeatAt="350">
				<animation property="origin" to="0.15 0" begin="5000"  duration="10000" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="20000" duration="10000" mode="linear"/>

				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
				<animation property="x" from="0.5" begin="0"  duration="350" mode="easeOut"/>
			</storyboard>
		</image>
		
		<image name="avatar2, avatar3, avatar4" extra="static">
			<origin>0 0</origin>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
			<zIndex>14</zIndex>
		</image>
		
		<image name="avatar2" extra="static">
			<pos>0.253 0.495</pos>
			<maxSize>0.16 0.285</maxSize>
			<path>./avatar-left.png</path>
			<storyboard repeatAt="350">
				<animation property="origin" to="-0.1 0" begin="350"   duration="10000" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="10350" duration="10000" mode="linear"/>
				<animation property="origin" to="-0.1 0" begin="20350" duration="10000" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="30350" duration="10000" mode="linear"/>

        		<animation property="rotation" from="0" to="20" begin="350"   duration="20000" mode="ease"/>
        		<animation property="rotation" from="20" to="0" begin="20350" duration="20000" mode="ease"/>

				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>
		<image name="avatar3" extra="static">
			<pos>0.343 0.2</pos>
			<maxSize>0.166 0.289</maxSize>
			<path>./avatar-center.png</path>
			<storyboard repeatAt="350">
				<animation property="origin" to="-0.2 0" begin="350"   duration="15000" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="15350" duration="15000" mode="linear"/>
				<animation property="origin" to="-0.2 0" begin="30350" duration="15000" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="45350" duration="15000" mode="linear"/>

        		<animation property="rotation" from="0" to="20" begin="350"   duration="30000" mode="ease"/>
        		<animation property="rotation" from="20" to="0" begin="30350" duration="30000" mode="ease"/>

				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>
		<image name="avatar4" extra="static">
			<pos>0.654 0.046</pos>
			<maxSize>0.3 0.25</maxSize>
			<path>./avatar-right.png</path>
			<storyboard repeatAt="350">
				<animation property="origin" to="-0.3 0" begin="5000"  duration="10000" mode="linear"/>
				<animation property="origin" to="0 0" 	 begin="20000" duration="10000" mode="linear"/>
				
				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>
		
	</view>

</theme>
