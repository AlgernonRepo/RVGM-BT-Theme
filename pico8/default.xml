<theme>
	<formatVersion>7</formatVersion>

	<view name="system">

		<image name="avatar, avatar2" extra="static">
			<origin>0 0</origin>
			<pos>0.2823 0.047</pos>
			<maxSize>0.52 0.9067</maxSize>
			<linearSmooth>true</linearSmooth>
			<zIndex>16</zIndex>
		</image>

		<image name="avatar" extra="true">
			<storyboard repeatAt="0">
        		<animation property="opacity" from="0" to="1" duration="500" mode="linear"/>
				<animation property="x" from="1" begin="0" duration="1000" mode="easyOut"/>

        		<animation property="opacity" from="1" to="0" begin="5000" duration="10000" mode="easyOut"/>
				<animation property="origin" to="0 -1" begin="5000" duration="10000" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar2" extra="static">
			<path>./avatar-fraise.png</path>
			<zIndex>17</zIndex>
			<storyboard>
        		<animation property="scale"    to="1.02" begin="0"   autoreverse="true" duration="500" repeat="forever" mode="easyIn"/>
        		<animation property="rotation" to="1.02" begin="150" autoreverse="true" duration="500" repeat="forever" mode="easyIn"/>

        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>
		
	</view>

</theme>
