<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  
	<variables>
	
		<themeFavorisColor>FFFF00</themeFavorisColor> 	<!-- Yellow     	${themeFavorisColor}-->
		<themeDarkColor>4c5058</themeDarkColor> 		<!-- Dark gray 		${themeDarkColor}	-->
		<themeLightColor>bebebe</themeLightColor> 		<!-- Light gray 	${themeLightColor}	-->

		<userDarkColor>1b76ae</userDarkColor> 			<!-- Dark Blue 		${userDarkColor}	-->
		<userColor>1f9be7</userColor> 					<!-- Blue 			${userColor}		-->
		<userLightColor>7BC4F1</userLightColor>			<!-- Light blue		${userLightColor}	-->

		<fontLight>Cabin-Regular.ttf</fontLight> 		<!-- gamelist -->
		<fontMedium>Cabin-Regular.ttf</fontMedium>
		<fontBold>Cabin-Bold.ttf</fontBold>
	
	</variables>
	
	<view name="splash">


		<splash name="splash">
			<backgroundColor>000000FF</backgroundColor>
		</splash>
		<image name="background">
		<!--	<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.9 0.9</maxSize> -->
			<path>./_art/splash.jpg</path>
		</image>


		<image name="progressbar">
			<color>${userDarkColor}FF</color>
		</image>
		<image name="progressbar:active">
			<color>${userColor}FF</color>
		</image>
		<text name="label">
			<fontPath>./art/${fontMedium}</fontPath>
			<color>${themeLightColor}FF</color>
			<forceUppercase>true</forceUppercase>
		</text>

		
	</view>
	
</theme>
