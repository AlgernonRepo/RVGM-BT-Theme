			<alignment>left</alignment>
			<zIndex>40</zIndex>
        </datetime>

		<text name="md_players">
			<fontPath>${artPath}/Players.ttf</fontPath>
			<alignment>center</alignment>
			<color>${textColor}</color>
		</text>
		<rating name="md_rating">
			<filledPath>${artPath}/rating/star-gray.png</filledPath>
			<unfilledPath>${artPath}/rating/star-gray-empty.png</unfilledPath>
		</rating>
		
        <textlist name="gamelist">
			<origin>0 0</origin>
            <pos>0.745 0.259</pos>
            <size>0.22 0.63</size>
			
			<selectedColor>${titleColor}</selectedColor> <!-- Select file color -->
			<primaryColor>${logoColor}</primaryColor> <!-- File color -->
			<secondaryColor>${dirColor}</secondaryColor> <!-- Directory color -->

			<fontPath>${artPath}/Roboto-Light.ttf</fontPath>
			<fontSize>0.021</fontSize> <!-- Medium / 0.25 / 1.7 -->
			<lineSpacing>1.5</lineSpacing> <!-- Default 1.5 -->
			<alignment>right</alignment>
			<horizontalMargin>0.0</horizontalMargin>
			<!-- <forceUppercase>1</forceUppercase> -->

			<selectorColor>${textColor}00</selectorColor> <!-- Alpha channel RGBA: FF visible / 00 transparent -->
			<!-- <selectorImagePath>${artPath}/icon.png</selectorImagePath> -->
			<selectorHeight>0.05</selectorHeight>
			<!-- <scrollSound>${artPath}/sounds/systemscroll.wav</scrollSound> -->
			<zIndex>30</zIndex> <!-- Default -->
		</textlist> -->
		
		<!-- BACKGROUND IMAGE -->
		<image name="background">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>${artPath}/white.png</path>
			<color>${logoColor}</color>
			<tile>true</tile> <!-- Repeat / Streach image -->
			<zIndex>0</zIndex> <!-- Default -->
		</image>
		
		<image name="bg-image" extra="true">
			<origin>0 0</origin>
			<pos>0.0151 0.0445</pos>
			<size>0.9698 0.911</size>
			<path>${artPath}/empty.png</path>
			<path>./${system.theme}/background.jpg</path>
			<color>ffffff33</color>
			<tile>false</tile>
			<zIndex>5</zIndex> <!-- Default -->
		</image>

		<image name="bg-game" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>${artPath}/gameMenu/bg-game.png</path>
			<zIndex>10</zIndex> <!-- Default 10 for extra -->
		</image>

		<!-- LOGO -->
		<image name="logo"> <!-- System -->
			<origin>0.5 0.5</origin> <!-- Center -->
			<pos>0.8536 0.161</pos>
			<maxSize>0.2214 0.1119</maxSize>
			<path>${artPath}/logos-gray/${system.name}.png</path>
			<path>./${system.theme}/system-logo-gray-us.png</path>
			<path>./${system.theme}/system-logo-gray-${langue}.png</path>
			<zIndex>50</zIndex> <!-- Default -->
		</image>
		<text name="logoText"> <!-- To show if no System LOGO -->
			<pos>0.7445 0.1097</pos>
			<size>0.2214 0.1119</size>
			<fontSize>0.0444444444444444</fontSize>
			<fontPath>${artPath}/Roboto-Medium.ttf</fontPath>
			<alignment>center</alignment>
			<forceUppercase>true</forceUppercase>
			<color>${logoColor}</color>
		</text>
		
		<!-- BACKGROUND MUSIC used by Theme -->
		<sound name="bgsound">
			<!-- <path>./sounds/system.ogg</path> -->
		</sound>

	</view>

	<view name="basic, detailed, video">
		
		<!-- IMAGE -->
		<image name="md_image">
			<origin>0 0</origin>
			<pos>2 2</pos>
			<default>${artPath}/empty.png</default>
			<zIndex>30</zIndex> <!-- Default -->
		</image>
		<image name="md_thumbnail">
			<origin>0 0</origin>
			<pos>2 2</pos>
			<default>${artPath}/empty.png</default>
			<zIndex>30</zIndex> <!-- Default -->
		</image>
		
		<!-- VIDEO -->
		<image name="background_video" extra="true">
			<origin>0 0</origin>
			<tile>true</tile>
			<color>bebebeff</color>
			<path>${artPath}/white.png</path>
			<zIndex>40</zIndex> <!-- Default 10 for extra -->
		</image>
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<snapshotSource>image</snapshotSource> <!-- thumbnail -->
			<showSnapshotNoVideo>true</showSnapshotNoVideo> <!-- Show thumbnail from gamelist.xml if no video and no default -->
			<showSnapshotDelay>true</showSnapshotDelay>
			<loops>0</loops>
			<delay>1</delay> <!-- Second -->
			<zIndex>50</zIndex> <!-- 30 by Default forced to 5000 by OMX -->
		</video>
		
	</view>
	
	<view name="basic" displayName="${basicViewName}">
	
		<image name="md_image">
			<pos>0.053 0.115</pos> <!-- Left align -->
			<maxSize>0.637 0.764</maxSize>
		</image>

		<!-- NO MARQUEE / NO VIDEO -->
		
	</view>

