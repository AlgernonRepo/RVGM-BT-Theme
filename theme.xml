<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:     RVGM
author:         Darknior
version:		2.0
email:			darknior@hotmail.com
System 			Batocera 5.25+

font: 			Roboto-Light.ttf, Roboto-Medium.ttf, Roboto-Bold.ttf, Players.fft
doc:			https://github.com/Darknior/RVGM-ES-Theme
forum:			https://retropie.org.uk/forum/topic/16454/rvgm-retro-retropie-video-game-museum-theme-in-development/
Doc ES:			https://github.com/RetroPie/EmulationStation/blob/master/THEMES.md

Images organisations:
- Image		 = screenshot ou titleshot
- Thumbnails = box
- Marquee	 = marquee ou wheel
- Video		 = vidéo
-->

<theme defaultView="video">
	<formatVersion>7</formatVersion>

	<!-- 
	System variable come from es_systems.cfg
	Ex : <path>./art/logo/${system.theme}.svg</path>
	${system.name} <name>nes</name>
	${system.fullName} <fullname>Nintendo Entertainment System</fullname>
	${system.theme} <theme>nes</theme>
	-->
	<variables>
		<legendColor>02588d</legendColor> 	<!-- Dark Blue 	${legendColor} -->
		<titleColor>1f9be7</titleColor> 	<!-- Blue 		${titleColor}  -->
		<dirColor>7BC4F1</dirColor>			<!-- Light blue	${dirColor}    -->
		<logoColor>bebebe</logoColor> 		<!-- Light gray ${logoColor}   -->
		<textColor>4c5058</textColor> 		<!-- Dark gray 	${textColor}   -->
		
		<artPath>./_art</artPath>			<!-- Theme general media path -->
	</variables>

	<!-- Translate ES Help bars, Systems Info & Description, change Systems Logo & Console.
	us : Englis (Default) / fr : French / sp : Spanish / jp : Japanese -->
	<include subset="language" name="French" displayName="${langFr}">${artPath}/language/french.xml</include>
	<include subset="language" name="English" displayName="${langEn}">${artPath}/language/english.xml</include>
	<include subset="language" name="Spanish" displayName="${langSp}">${artPath}/language/spanish.xml</include>
	<!-- <include subset="language" name="Deutch" displayName="${langDe}">${artPath}/language/deutch.xml</include>
	<include subset="language" name="Russian" displayName="${langRu}">${artPath}/language/russian.xml</include>
	<include subset="language" name="Italian" displayName="${langIt}">${artPath}/language/italian.xml</include> -->

	<!-- Popup System -->
	<view name="menu">
		<menuText name="menutitle">
			<fontPath>${artPath}/Roboto-Bold.ttf</fontPath>
			<fontSize>0.044</fontSize>
			<color>${titleColor}</color>
		</menuText>
		<menuText name="menufooter">
			<fontPath>${artPath}/Roboto-Regular.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>${logoColor}</color>
		</menuText>
		<menuText name="menutext">
			<fontPath>${artPath}/Roboto-Regular.ttf</fontPath>
			<fontSize>0.038</fontSize>
			<color>${logoColor}</color>
			<iconColor>${titleColor}</iconColor>
			<separatorColor>${dirColor}</separatorColor>      
			<selectorColor>${logoColor}</selectorColor>
			<selectorColorEnd>${logoColor}</selectorColorEnd>
			<selectedColor>${titleColor}</selectedColor>
			<selectorGradientType>horizontal</selectorGradientType>
		</menuText>
		<!-- Popup Updates/Download -->
		<menuTextSmall name="menutextsmall">
			<fontPath>${artPath}/Roboto-Regular.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>deec00</color> <!-- Jaune -->
		</menuTextSmall>
		<!-- Background de la Popup -->
		<menuBackground name="menubg">
			<color>${textColor}</color>      
			<cornerSize>32 32</cornerSize>
			<path>${artPath}/popup/frame.png</path>
		</menuBackground>
		<!-- Icones du menu principal -->
		<menuIcons name="menuicons">
			<iconKodi>${artPath}/icons/Kodi.png</iconKodi>
			<iconSystem>${artPath}/icons/System.png</iconSystem>
			<iconUpdates>${artPath}/icons/Updates.png</iconUpdates>
			<iconGames>${artPath}/icons/Games.png</iconGames>
			<iconControllers>${artPath}/icons/Controllers.png</iconControllers>
			<iconUI>${artPath}/icons/UI.png</iconUI>
			<iconSound>${artPath}/icons/Sound.png</iconSound>
			<iconNetwork>${artPath}/icons/Network.png</iconNetwork>
			<iconScraper>${artPath}/icons/Scraper.png</iconScraper>
			<iconAdvanced>${artPath}/icons/Advanced.png</iconAdvanced>
			<iconQuit>${artPath}/icons/Quit.png</iconQuit>
			<iconRestart>${artPath}/icons/Restart.png</iconRestart>
			<iconShutdown>${artPath}/icons/Shutdown.png</iconShutdown>
			<iconFastShutdown>${artPath}/icons/Fastshutdown.png</iconFastShutdown>
			<iconRetroachievements>${artPath}/icons/Contest.png</iconRetroachievements>
		</menuIcons>
		<menuTextEdit name="menutextedit">
			<inactive>${artPath}/popup/textinput_ninepatch.png</inactive>
			<active>${artPath}/popup/textinput_ninepatch_active.png</active>
		</menuTextEdit>
	</view>

	<!-- View always on TOP!! -->
	<view name="screen">

		<controllerActivity name="controllerActivity">
			<origin>0 0</origin>
			<pos>0.0161 0.0107</pos>
			<size>0.085 0.025</size>
			<!--<horizontalAlignment>right</horizontalAlignment>-->
			<itemSpacing>0.003</itemSpacing>
			<imagePath>${artPath}/screen/gamepad.svg</imagePath>
			<color>${logoColor}C0</color>
			<activityColor>${dirColor}C0</activityColor>
			<hotkeyColor>FFA0A0C0</hotkeyColor>
		</controllerActivity>
		
		<text name="clock">
			<origin>0 0</origin>
			<pos>0.9344 0.9584</pos>
			<size>0.05 0.0384</size>
            <verticalAlignment>center</verticalAlignment>
			<textColor>${logoColor}</textColor>
			<fontPath>${artPath}/screen/Digib.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</text>

	</view>
	
	<view name="system, basic, detailed, grid, video">
	
		<!-- Standard helpsystem -->
		<helpsystem name="help">
			<origin>0 0</origin>
			<pos>0.0161 0.9648</pos>
			<textColor>${logoColor}</textColor>
			<iconColor>${dirColor}</iconColor>
			<fontPath>${artPath}/Roboto-Bold.ttf</fontPath>
			<fontSize>0.024</fontSize>
		</helpsystem>

	</view>
	
	<!-- Carousel (Hide white bar and number of games -->
	
	<include subset="systemview" name="Vertical Right Menu" displayName="${menuVertRight}">${artPath}/systemMenu/vertical-right.xml</include>
	<include subset="systemview" name="Vertical Left Menu" displayName="${menuVertLeft}">${artPath}/systemMenu/vertical-left.xml</include>
	<include subset="systemview" name="Horizontal Bottom Menu" displayName="${menuHorizBot}">${artPath}/systemMenu/horizontal-down.xml</include>
	
	<!-- Carousel -->

	<view name="basic, detailed, grid, video"> <!--  ifHelpPrompts="true" -->

        <text name="md_lbl_developer, md_lbl_publisher, md_lbl_genre, 
                    md_lbl_players, md_lbl_playcount, md_lbl_rating,
					md_lbl_releasedate, md_lbl_lastplayed, md_lbl_gametime,
