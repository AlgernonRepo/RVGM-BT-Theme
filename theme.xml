<theme defaultView="video">
	<formatVersion>7</formatVersion>

	<include>${artPath}/language/all.xml</include>

	<!-- 
	System variable come from es_systems.cfg
	Ex : <path>./art/logo/${system.theme}.svg</path>
	${system.name} <name>nes</name>
	${system.fullName} <fullname>Nintendo Entertainment System</fullname>
	${system.theme} <theme>nes</theme>
	-->
	<variables>
		<artPath>./_art</artPath>			<!-- Media path 		${artPath}		-->
		<langue>us</langue>
		<favorisColor>FFFF00</favorisColor> <!-- Yellow     		${favorisColor}	-->
		
		<logoColor>bebebe</logoColor> 		<!-- Light gray 		${logoColor}	-->
		<textColor>4c5058</textColor> 		<!-- Dark gray 			${textColor}	-->

		<legendColor>02588d</legendColor> 	<!-- Dark Blue 			${legendColor}	-->
		<titleColor>1f9be7</titleColor> 	<!-- Blue 				${titleColor}	-->
		<dirColor>7BC4F1</dirColor>			<!-- Light blue			${dirColor}		-->
	</variables>

	<!-- Translate ES Help bars, Systems Info & Description, change Systems Logo & Console.
	us : Englis (Default) / fr : French / sp : Spanish / jp : Japanese -->
	<include subset="language" name="English" displayName="${langEn}" />
	<include subset="language" name="French"  displayName="${langFr}">${artPath}/language/french.xml</include>
	<include subset="language" name="Spanish" displayName="${langSp}">${artPath}/language/spanish.xml</include>

	<include subset="colorset" name="Blue"  displayName="${colblue}" />
	<include subset="colorset" name="Red"   displayName="${colred}"  >${artPath}/colors/red.xml</include>
	<include subset="colorset" name="Green" displayName="${colgreen}">${artPath}/colors/green.xml</include>

	<!-- Popup System -->
	<view name="menu">
		<menuText name="menutitle">
			<fontPath>${artPath}/Roboto-Bold.ttf</fontPath>
			<fontSize>0.044</fontSize>
			<color>${titleColor}</color>
		</menuText>
		<menuText name="menufooter">
			<fontPath>${artPath}/Roboto-Regular.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>${logoColor}</color>
		</menuText>
		<menuText name="menutext">
			<fontPath>${artPath}/Roboto-Regular.ttf</fontPath>
			<fontSize>0.038</fontSize>
			<color>${logoColor}</color>
			<iconColor>${titleColor}</iconColor>
			<separatorColor>${dirColor}</separatorColor>      
			<selectorColor>${logoColor}</selectorColor>
			<selectorColorEnd>${logoColor}</selectorColorEnd>
			<selectedColor>${titleColor}</selectedColor>
			<selectorGradientType>horizontal</selectorGradientType>
		</menuText>
		<!-- Popup Updates/Download -->
		<menuTextSmall name="menutextsmall">
			<fontPath>${artPath}/Roboto-Regular.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<color>deec00</color> <!-- Jaune -->
		</menuTextSmall>
		<!-- Background de la Popup -->
		<menuBackground name="menubg">
			<color>${textColor}</color>      
			<cornerSize>32 32</cornerSize>
			<path>${artPath}/popup/frame.png</path>
		</menuBackground>
		<!-- Icones du menu principal -->
		<menuIcons name="menuicons">
			<iconKodi>${artPath}/iconsPopup/Kodi.png</iconKodi>
			<iconSystem>${artPath}/iconsPopup/System.png</iconSystem>
			<iconUpdates>${artPath}/iconsPopup/Updates.png</iconUpdates>
			<iconGames>${artPath}/iconsPopup/Games.png</iconGames>
			<iconControllers>${artPath}/iconsPopup/Controllers.png</iconControllers>
			<iconUI>${artPath}/iconsPopup/UI.png</iconUI>
			<iconSound>${artPath}/iconsPopup/Sound.png</iconSound>
			<iconNetwork>${artPath}/iconsPopup/Network.png</iconNetwork>
			<iconScraper>${artPath}/iconsPopup/Scraper.png</iconScraper>
			<iconAdvanced>${artPath}/iconsPopup/Advanced.png</iconAdvanced>
			<iconQuit>${artPath}/iconsPopup/Quit.png</iconQuit>
			<iconRestart>${artPath}/iconsPopup/Restart.png</iconRestart>
			<iconShutdown>${artPath}/iconsPopup/Shutdown.png</iconShutdown>
			<iconFastShutdown>${artPath}/iconsPopup/Fastshutdown.png</iconFastShutdown>
			<iconRetroachievements>${artPath}/iconsPopup/Contest.png</iconRetroachievements>
		</menuIcons>
		<menuTextEdit name="menutextedit">
			<inactive>${artPath}/popup/textinput_ninepatch.png</inactive>
			<active>${artPath}/popup/textinput_ninepatch_active.png</active>
		</menuTextEdit>
	</view>

	<!-- View always on TOP!! -->
	<view name="screen">

		<controllerActivity name="controllerActivity">
			<origin>0 0</origin>
			<pos>0.0161 0.0107</pos>
			<size>0.085 0.025</size>
			<!--<horizontalAlignment>right</horizontalAlignment>-->
			<itemSpacing>0.003</itemSpacing>
			<imagePath>${artPath}/screen/gamepad.svg</imagePath>
			<color>${logoColor}C0</color>
			<activityColor>${dirColor}C0</activityColor>
			<hotkeyColor>FFA0A0C0</hotkeyColor>
		</controllerActivity>
		
		<text name="clock">
			<origin>0 0</origin>
			<pos>0.9344 0.9584</pos>
			<size>0.05 0.0384</size>
            <verticalAlignment>center</verticalAlignment>
			<textColor>${logoColor}</textColor>
			<fontPath>${artPath}/screen/Digib.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</text>

	</view>
	
	<view name="system, basic, detailed, video, grid">
	
		<!-- Standard helpsystem -->
		<helpsystem name="help">
			<origin>0 0</origin>
			<pos>0.0161 0.9648</pos>
			<textColor>${logoColor}</textColor>
			<iconColor>${dirColor}</iconColor>
			<fontPath>${artPath}/Roboto-Bold.ttf</fontPath>
			<fontSize>0.024</fontSize>
		</helpsystem>

	</view>
	
	<!-- Carousel SYSTEM MENU -->
	
	<include subset="systemView" name="Vertical Right Menu"				displayName="${menuVertRight}"		>${artPath}/systemView/vertical-right.xml</include>
	<include subset="systemView" name="Vertical Left Menu"				displayName="${menuVertLeft}" 		>${artPath}/systemView/vertical-left.xml</include>
	<include subset="systemView" name="Horizontal Bottom Menu"			displayName="${menuHorizBot}" 		>${artPath}/systemView/horizontal-down.xml</include>
	<include subset="systemView" name="Horizontal Bottom Menu + Video"	displayName="${menuHorizBotVideo}"	>${artPath}/systemView/horizontal-down-video.xml</include>
	
	<!-- Carousel END -->

	<view name="basic, detailed, video, grid"> <!--  ifHelpPrompts="true" -->

        <text name="md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_playcount, 
                    md_lbl_description, md_lbl_players, md_lbl_rating,
					md_lbl_releasedate, md_lbl_lastplayed, md_lbl_gametime,
					md_developer, md_publisher, md_genre, md_playcount, md_description">
			<origin>0 0</origin>
			<pos>2 2</pos>
			<size>0.15 0.015</size>
			
			<color>${legendColor}</color>
			<fontSize>0.024</fontSize>
			<forceUppercase>0</forceUppercase>
			<fontPath>${artPath}/Roboto-Medium.ttf</fontPath>
			<alignment>right</alignment>			
			<zIndex>40</zIndex>  <!-- Default for METADATA -->
        </text>
        <text name="md_developer, md_publisher, md_genre, md_playcount, md_description">
			<color>${textColor}</color>
			<alignment>left</alignment>
			<lineSpacing>1.0</lineSpacing>
        </text>
        <datetime name="md_releasedate, md_lastplayed, md_gametime">
			<origin>0 0</origin>
			<pos>2 2</pos>
			<size>0.15 0.015</size>
			
			<color>${textColor}</color>
			<fontSize>0.024</fontSize>
			<forceUppercase>0</forceUppercase>
			<fontPath>${artPath}/Roboto-Medium.ttf</fontPath>
			<alignment>left</alignment>
			
			<!-- <displayRelative>0</displayRelative> Afficher une date relative : 5 jours avant
			<format>%d/%m/%Y à %Hh%Mm%Ss</format> Format d'affichage de la date -->
			<zIndex>40</zIndex>
        </datetime>

		<text name="md_players">
			<fontPath>${artPath}/Players.ttf</fontPath>
			<alignment>center</alignment>
			<color>${textColor}</color>
		</text>
		<rating name="md_rating">
			<filledPath>${artPath}/rating/star-gray.png</filledPath>
			<unfilledPath>${artPath}/rating/star-gray-empty.png</unfilledPath>
		</rating>
		
        <textlist name="gamelist">
			<origin>0 0</origin>
            <pos>0.745 0.259</pos>
            <size>0.22 0.63</size>
			
			<selectedColor>${titleColor}</selectedColor> <!-- Select file color -->
			<primaryColor>${logoColor}</primaryColor> <!-- File color -->
			<secondaryColor>${dirColor}</secondaryColor> <!-- Directory color -->

			<fontPath>${artPath}/Roboto-Light.ttf</fontPath>
			<fontSize>0.021</fontSize> <!-- Medium / 0.25 / 1.7 -->
			<lineSpacing>1.5</lineSpacing> <!-- Default 1.5 -->
			<alignment>right</alignment>
			<horizontalMargin>0.0</horizontalMargin>
			<!-- <forceUppercase>1</forceUppercase> -->

			<selectorColor>${textColor}00</selectorColor> <!-- Alpha channel RGBA: FF visible / 00 transparent -->
			<!-- <selectorImagePath>${artPath}/icon.png</selectorImagePath> -->
			<selectorHeight>0.05</selectorHeight>
			<!-- Sound effect on Scroll -->
			<scrollSound>${artPath}/sounds/linemove.wav</scrollSound>
			<zIndex>30</zIndex> <!-- Default -->
		</textlist>
		
		<!-- BACKGROUND IMAGE -->
		<image name="background">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>${artPath}/white.png</path>
			<color>${logoColor}</color>
			<tile>true</tile> <!-- Repeat / Streach image -->
			<zIndex>0</zIndex> <!-- Default -->
		</image>
		
		<image name="bg-image" extra="true">
			<origin>0 0</origin>
			<pos>0.0151 0.0445</pos>
			<size>0.9698 0.911</size>
			<path>${artPath}/empty.png</path>
			<path>./${system.theme}/background.jpg</path>
			<color>ffffff33</color>
			<tile>false</tile>
			<zIndex>5</zIndex> <!-- Default -->
		</image>

		<image name="bg-game" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>${artPath}/gameView/bg-game.png</path>
			<zIndex>10</zIndex> <!-- Default 10 for extra -->
		</image>

		<!-- LOGO -->
		<image name="logo"> <!-- System -->
			<origin>0.5 0.5</origin> <!-- Center -->
			<pos>0.8536 0.161</pos>
			<maxSize>0.2214 0.1119</maxSize>
			<path>${artPath}/logos-gray/${system.name}.png</path>
			<path>./${system.theme}/system-logo-gray-us.png</path>
			<path>./${system.theme}/system-logo-gray-${langue}.png</path>
			<zIndex>50</zIndex> <!-- Default -->
		</image>
		<text name="logoText"> <!-- To show if no System LOGO -->
			<pos>0.7445 0.1097</pos>
			<size>0.2214 0.1119</size>
			<fontSize>0.0444444444444444</fontSize>
			<fontPath>${artPath}/Roboto-Medium.ttf</fontPath>
			<alignment>center</alignment>
			<forceUppercase>true</forceUppercase>
			<color>${logoColor}</color>
		</text>
		
		<!-- BACKGROUND MUSIC used by Theme -->
		<sound name="bgsound">
			<!-- <path>./sounds/system.ogg</path> -->
		</sound>

	</view>

	<view name="basic, detailed, video">
		
		<!-- IMAGE -->
		<image name="md_image">
			<origin>0 0</origin>
			<pos>2 2</pos>
			<default>${artPath}/empty.png</default>
			<zIndex>30</zIndex> <!-- Default -->
		</image>
		<image name="md_thumbnail">
			<origin>0 0</origin>
			<pos>2 2</pos>
			<default>${artPath}/empty.png</default>
			<zIndex>30</zIndex> <!-- Default -->
		</image>
		
		<!-- VIDEO -->
		<image name="background_video" extra="true">
			<origin>0 0</origin>
			<tile>true</tile>
			<color>bebebeff</color>
			<path>${artPath}/white.png</path>
			<zIndex>40</zIndex> <!-- Default 10 for extra -->
		</image>
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<snapshotSource>image</snapshotSource> <!-- thumbnail -->
			<showSnapshotNoVideo>true</showSnapshotNoVideo> <!-- Show thumbnail from gamelist.xml if no video and no default -->
			<showSnapshotDelay>true</showSnapshotDelay>
			<loops>0</loops>
			<delay>1</delay> <!-- Second -->
			<zIndex>50</zIndex> <!-- 30 by Default forced to 5000 by OMX -->
		</video>
		
	</view>
	
